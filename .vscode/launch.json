{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Server",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "server"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Client",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "web-client"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "type": "pwa-msedge",
            "request": "launch",
            "name": "Edge debugger",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        }
    ]
}